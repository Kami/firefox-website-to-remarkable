{

  "manifest_version": 2,
  "name": "Website to RM2",
  "version": "1.0",

  "description": "Convert website you are currently viewing to PDF and send it to Remarkable.",

  "icons": {
    "128": "icons/128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "website-to-rm2@tomaz.me"
    }
  },

  "browser_action": {
    "browser_style": true,
        "default_popup": "popup/index.html",
        "default_icon": {
          "128": "icons/128.png"
        },
    "default_icon": {
      "128": "icons/128.png"
    }
  }
}
